@page "/teams"
@using VolleyballManager.Client.Models
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Teams</h3>

<button class="btn btn-success mb-3" @onclick="@(() => Nav.NavigateTo("/teams/add"))">Add New Team</button>

@if (teams == null)
{
    <p><em>Loading...</em></p>
}
else if (teams.Count == 0)
{
    <p>No teams found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Coach</th>
                <th>City</th>
                <th>Players</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.Coach</td>
                    <td>@team.City</td>
                    <td>@team.PlayerCount</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-2" @onclick="@(() => EditTeam(team.Id))">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => DeleteTeam(team.Id))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Team>? teams;

    protected override async Task OnInitializedAsync()
    {
        teams = await Http.GetFromJsonAsync<List<Team>>("api/teams");
    }

    private void EditTeam(int id)
    {
        Nav.NavigateTo($"/teams/edit/{id}");
    }

    private async Task DeleteTeam(int id)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this team?");
        if (!confirmed) return;

        var response = await Http.DeleteAsync($"api/teams/{id}");
        if (response.IsSuccessStatusCode)
        {
            teams = await Http.GetFromJsonAsync<List<Team>>("api/teams");
        }
        else
        {
            var msg = await response.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Delete failed: {msg}");
        }
    }
}
